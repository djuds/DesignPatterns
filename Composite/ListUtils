public class ListUtils {
    
    public static List<Object> removeObjectFromList(List<Object> listOfObjects, Object o) {
        List<Object> copyList = new List<Object>(listOfObjects);
        
        for (Integer i = copyList.size() - 1; i >= 0 ; --i) {
        	if (copyList.get(i) == o) {
				copyList.remove(i); 
			}           
    	}
    
        return copyList;
	}
}
